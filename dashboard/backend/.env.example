# Production Dashboard Backend Configuration
# Copy this file to .env and configure as needed

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_PATH=./dashboard.db
DATABASE_LOG_RETENTION_DAYS=30

# Orchestrator Configuration
ORCHESTRATOR_PATH=../../orchestrator
TRAINING_CONFIG_PATH=../../orchestrator/training/config.json
LOGS_PATH=../../orchestrator/logs

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=dashboard.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration
CORS_ORIGINS=*
# For production, set specific origins:
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# System Health Monitoring
HEALTH_CHECK_INTERVAL=60
CPU_WARNING_THRESHOLD=70
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=70
MEMORY_CRITICAL_THRESHOLD=90
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=95

# Training Configuration
TRAINING_AUTO_START=False
TRAINING_SCHEDULE=0 3 * * *
TRAINING_TIMEOUT_SECONDS=1800

# Metrics Configuration
METRICS_RETENTION_DAYS=30
METRICS_SAMPLE_INTERVAL=300

# Optional: WebSocket Configuration (for future use)
# WEBSOCKET_ENABLED=False
# WEBSOCKET_PORT=5001

# Optional: Notifications (for future use)
# NOTIFICATIONS_ENABLED=False
# SLACK_WEBHOOK_URL=
# EMAIL_ENABLED=False
# EMAIL_SMTP_SERVER=
# EMAIL_FROM=
# EMAIL_TO=
