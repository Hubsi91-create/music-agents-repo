# ============================================================
# API LOGGING CONFIGURATION
# ============================================================
# Environment variables for production logging configuration

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Slow Request Threshold (milliseconds)
# Requests exceeding this duration will be logged as warnings
SLOW_REQUEST_THRESHOLD_MS=1000

# Log Directory (where log files will be stored)
LOG_DIR=./logs

# Enable/Disable Specific Handlers
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=true

# Request Body Logging
# WARNING: May log sensitive data in development
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=false

# Rotating File Handler Settings
LOG_FILE_MAX_BYTES=10485760  # 10 MB
LOG_FILE_BACKUP_COUNT=10

# JSON Log Settings
JSON_LOG_ROTATION_INTERVAL=midnight  # midnight, H (hourly), D (daily)
JSON_LOG_BACKUP_DAYS=30

# ============================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# ============================================================

# Development Environment:
# LOG_LEVEL=DEBUG
# LOG_REQUEST_BODY=true
# LOG_RESPONSE_BODY=true

# Production Environment:
# LOG_LEVEL=INFO
# LOG_REQUEST_BODY=false
# LOG_RESPONSE_BODY=false
# SLOW_REQUEST_THRESHOLD_MS=500

# Debug Environment:
# LOG_LEVEL=DEBUG
# LOG_REQUEST_BODY=true
# LOG_RESPONSE_BODY=true
# SLOW_REQUEST_THRESHOLD_MS=100
